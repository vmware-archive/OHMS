<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p: %c - %m%n"/>
        </layout>
    </appender>
    
    <appender name="hms" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${catalina.base}/logs/hms.log" />
		<param name="MaxFileSize" value="100MB" />
    	<param name="MaxBackupIndex" value="5" />
    	<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%c] %m%n" />
		</layout>
	</appender>

    <!-- Application Loggers -->
    <logger name="com.vmware.vrack" additivity="false">
        <level value="debug"/>
        <appender-ref ref="hms" />
        <appender-ref ref="console"/>
    </logger>
    
    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.core">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.beans">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.context">
        <level value="info"/>
    </logger>
    <logger name="com.vmware.identity.websso.client">
        <level value="debug"/>
    </logger>
    
    <logger name="org.springframework.web.client">
        <level value="info"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="warn"/>
        <appender-ref ref="hms" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>
